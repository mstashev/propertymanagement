<h1>Lease Listings</h1>

<table>
  <tr>
    <th>Start date</th>
    <th>End date</th>
    <th>Rent</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @leases.each do |lease| %>
  <tr>
    <td><%= lease.start_date %></td>
    <td><%= lease.end_date %></td>
    <td><%= lease.rent %></td>
    <td>
      <% if can? :read, lease %>
        <%= link_to 'Show', lease %>
      <% end %>
    </td>
    <td>
      <% if can? :manage, lease %>
        <%= link_to 'Edit', edit_lease_path(lease) %>
      <% end %>
    </td>
    <td>
      <% if can? :manage, lease %>
        <%= link_to 'Destroy', lease, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
  <tr>
    <br />
    <% if can? :manage, lease %>
      <%= link_to 'New Lease', new_lease_path %>
    <% end %>
  </tr>
<% end %>
</table>
