<h1>Property Listings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @properties.each do |property| %>
  <tr>
    <td><%= property.name %></td>
    <td><%= property.address %></td>
    <td><%= property.city %></td>
    <td><%= property.state %></td>
    <td><%= property.zip %></td>
    <td>
      <% if can? :read, property %>
        <%= link_to 'Show', property %>
      <% end %>
    </td>
    <td>
      <% if can? :manage, property %>
        <%= link_to 'Edit', edit_property_path(property) %>
      <% end %>
    </td>
    <td>
      <% if can? :manage, property %>
        <%= link_to 'Destroy', property, method: :delete, data: { confirm: 'Are you sure?' } %>
      <% end %>
    </td>
  </tr>
<% end %>
</table>

<br />
<% if can? :manage, property %>
  <%= link_to 'New Property', new_property_path %>
<% end %>
